{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@common/*": ["src/common/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@interface/*": ["src/interface/*"],
      "@model/*": ["src/model/*"],
      "@repository/*": ["src/repository/*"],
      "@usecase/*": ["src/usecase/*"]
    },
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  }
}
